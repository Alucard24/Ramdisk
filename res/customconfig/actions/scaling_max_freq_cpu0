#!/sbin/busybox sh

# $1 - "scaling_max_freq_cpu0"
# $2 - value=
# Created By Dorimanx

# get values from profile
PROFILE=$(cat /data/.alucard/.active.profile);
. /data/.alucard/"$PROFILE".profile;

if [ "$cortexbrain_cpu" == "on" ]; then
	if [ "a$2" != "a" ]; then
		scaling_max_freq_cpu0=$2;

		echo "$scaling_max_freq_cpu0" > /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq;
	fi;
fi;

echo ${scaling_max_freq_cpu0};
