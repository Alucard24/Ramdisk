#!/sbin/busybox sh

# $1 - "min_touch_limit"
# $2 - value=
# Created By Alucard

if [ "a$2" != "a" ]; then
	min_touch_limit=$2;

	echo "$min_touch_limit" > /sys/module/synaptics_i2c_rmi/parameters/min_touch_limit;
	echo "$min_touch_limit" > /sys/module/cypress_touchkey_236/parameters/min_touch_limit;
	echo "$min_touch_limit" > /sys/module/mxts/parameters/min_touch_limit;
	echo "$min_touch_limit" > /sys/module/rmi_fw_update/parameters/min_touch_limit;
fi;

echo ${min_touch_limit};
